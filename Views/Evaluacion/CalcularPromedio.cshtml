<!-- CalcularPromedio.cshtml -->
@if (ViewBag.Promedio != null && ViewBag.Estado != null)
{
    <h2>Promedio: @ViewBag.Promedio.ToString("N2")</h2>
    <h2>Estado: @ViewBag.Estado</h2>
}
else
{
    <p>No se han recibido las calificaciones.</p>
}

